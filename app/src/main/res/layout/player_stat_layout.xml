<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/PlayerProfil"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nAMEpLAYER"
                android:layout_below="@id/PlayerProfil"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/TeamText"
                android:layout_below="@id/nAMEpLAYER"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="KCCA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Match"
                android:layout_below="@id/nAMEpLAYER"
                android:layout_marginTop="10dp"
                android:text="Matches"
                android:layout_marginLeft="8dp"
                android:textStyle="normal"
                android:textSize="19sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Minutes"
                android:layout_below="@id/nAMEpLAYER"
                android:layout_marginTop="10dp"
                android:text="Assists"
                android:textStyle="normal"
                android:textSize="19sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:textSize="19sp"
                android:layout_below="@id/Minutes"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:id="@+id/GoalTitle"
                />

            <TextView
                android:id="@+id/MatchJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_below="@id/Match"
                android:layout_marginLeft="20dp"
                android:text="3"
                />
           <TextView
               android:id="@+id/ButsMarque"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/GoalTitle"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="8dp"
               android:text="1"
               android:textSize="17sp"
               android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AssistB"
                android:layout_below="@id/Minutes"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="2"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ButsMarque"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Position"
                android:id="@+id/PositionPlayed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/position"
                android:layout_below="@id/PositionPlayed"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/hist"
                android:text="BIOGRAPHY :"
                android:layout_below="@id/position"
                android:layout_marginLeft="17dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contentBio"
                android:layout_below="@id/hist"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                />






        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
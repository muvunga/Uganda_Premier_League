<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/teamLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/TeamName"
                android:layout_centerHorizontal="true"

                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamLogo"
                android:layout_marginTop="18dp"
                />

            <TextView
                android:id="@+id/games_played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TeamName"
                android:layout_marginTop="8dp"
                android:paddingLeft="4dp"
                android:hint="Matches"
                android:textStyle="bold"
                android:textColor="#000"
                />
            <TextView
                android:layout_below="@id/TeamName"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:id="@+id/numberofGP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Goals_Scored"
                android:layout_below="@id/games_played"
                android:layout_marginTop="4dp"
                android:text="Win:"
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:textColor="#000"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Scored"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@id/numberofGP"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"

                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/Goals_Conceded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Goals_Scored"
                android:layout_marginTop="4dp"
                android:text="Lost:"
                android:paddingLeft="4dp"
                android:textStyle="bold"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/Conceded"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@id/Scored"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Games_Won"
                android:layout_below="@id/Goals_Conceded"
                android:layout_marginTop="4dp"
                android:text="Draw"
                android:textStyle="bold"
                android:textColor="#000"
                android:paddingLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/Won"
                android:layout_below="@id/Conceded"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"

                android:layout_marginTop="4dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Games_Lost"
                android:layout_below="@id/Games_Won"
                android:layout_marginTop="4dp"
                android:text="Manager:"
                android:textColor="#000"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Lost"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@id/Won"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/Drawn"
                android:layout_below="@id/Lost"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="History"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:paddingLeft="4dp"
                android:id="@+id/ClubHistory"
                android:layout_below="@id/Drawn"
                android:layout_marginTop="4dp"
                android:text="content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Coach"
                android:layout_below="@id/Drawn"
                android:layout_centerHorizontal="true"
                android:text="Players"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="40dp"

                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/Coach"
            android:id="@+id/underteamRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

        </android.support.v7.widget.RecyclerView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hangi.fufa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".TeamList"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".DisplayNewsContent" />
        <activity android:name=".DisplayPlayerStat"/>
        <activity android:name=".OngoingGaime"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".DisplayTeam"/>

    </application>

</manifest>